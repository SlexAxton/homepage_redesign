---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.name | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <language>en</language>
    <image>
      <url>{{ site.imageUrl }}</url>
      <title>{{ site.name | xml_escape }}</title>
      <link>{{ site.url }}</link>
    </image>
    {% for post in site.posts limit:10 %}
        {% unless post.draft %}
        <item>
          <title>{{ post.title }}</title>
          {% if post.description %}<description>{{ post.description }}</description>{% endif %}
          <content:encoded>{{ post.content }}</content:encoded>
          <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
          <link>{{ site.url }}{{ post.url }}</link>
          <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
          {% if post.image %}
          <media:content url="http://louhiablog.files.wordpress.com/2012/10/cognos_logo.jpg" medium="image">
            {% if post.imageTitle %} <media:title type="plain">{{post.imageTitle}}</media:title>{% endif %}
          </media:content>
          {% endif %}
          {% if post.thumbnail %}
          <media:content url="http://louhiablog.files.wordpress.com/2012/10/cognos_logo.jpg" medium="thumbnail">
            {% if post.thumbnailTitle %}<media:title type="plain">{{post.thumbnailTitle}}</media:title>{% endif %}
          </media:content>
          {% endif %}
        </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>